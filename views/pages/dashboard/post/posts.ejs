<%- include('../../../partials/header.ejs') %>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2">
             <%- include('../../../partials/sidebar.ejs') %>
            </div>
            <div class="col-md-10 my-5">
                <div class="card card-body">
                    <h5>Lists of my posts</h5>
                    <div class="row">
                        <% if(posts.length==0) {%>
                            <div class="text-center text-muted">
                                <p>There are no post avaiable right now</p>
                                <a href="/posts/create" class="btn btn-primary btn-sm">Create New Post</a>
                            </div>
                            <% }else{ %>
                                <% for (let post of posts.reverse()) { %>
                                    <div class="card col-sm-3 m-3">
                                        <% if(post.thumbnail) {%>
                                            <img src="<%= post.thumbnail %>" height="220" alt="<%= post.title %>"
                                                class="card-img-top mt-3">
                                            <% } %>
                                            <div class="card-body">
                                                <a href="/posts/edit/<%= post._id %>" style="color: black;"><%= post.title %></a>
                                            </div>
                                    </div>
                                <% } %>
                            <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../../../partials/footer.ejs') %>

        </body>

        </html>