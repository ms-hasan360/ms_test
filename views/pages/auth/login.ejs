<div class="container my-container my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card card-body">
                <h4 class="mb-3">Log in to your account</h4>
                <form action="/auth/login" method="POST">
                    <div class="form-group">
                        <label for="email">Enter Your Email</label>
                        <input type="email" name="email" id="email" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="password">Enter Your Password</label>
                        <input type="password" name="password" id="password" class="form-control">
                    </div>
                    <input type="submit" value="sign up" class="btn btn-primary my-3">
                </form>
                <p>
                Don't have any account ? <a href="/auth/signup" style="text-decoration: none;">Create One</a>
                </p>
            </div>
        </div>
    </div>
</div>


