<%- include('../../partials/header.ejs') %>
    <div class="container my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card card-body">
                <section>
                    <h3><%= post.title  %> </h3>
                    <div class="d-flex">
                        <small>
                            <%= moment (post.createdAt) %>, posted by <a href="#"><%= post.author.username %></a> , <%= post.readTime %>
                        </small>
                        <% if(user) { %>
                            <span class="ml-auto bookmark" data-post="<%= post._id %> ">
                                <% if(bookmarks.includes(post._id)) { %>
                                    <i class="fa fa-bookmark" aria-hidden="true"></i>
                                    <% } else { %>
                                        <i class="fa fa-bookmark-o" aria-hidden="true"></i>
                                        <% } %>
                            </span>
                            <% } %>
                    </div>
                    <% if(post.thumbnail){%>
                        <img src="<%= post.thumbnail %>" class="img-fluid my-2">
                        <%} %>
                    <section>
                        <%- post.body %> 
                    </section>
                    <section class="mt-5">
                        <% if(!user) { %>
                            <button class="btn btn-success btn-sm" disabled>Like | <%=post.likes.length  %> </button>
                            <button class="btn btn-danger btn-sm" disabled>Dislike | <%=post.dislikes.length %> </button>
                            <p class="text-center text-muted py-4">To Like And Comment please <a href="/auth/login">Log in</a></p>
                        <% }else { %>
                            <button class="btn btn-success btn-sm" id="likeBtn" data-post="<%= post._id %> " >
                            <%= post.likes.includes(user._id) ? 'Liked' : 'Like' %> | <%=post.likes.length %>
                            </button>
                            <button class="btn btn-danger btn-sm" id="dislikeBtn" data-post="<%= post._id %> ">
                                <%= post.dislikes.includes(user._id) ? 'Disliked' : 'Dislike' %> | <%=post.dislikes.length %>
                            </button>


                            <%/*comment code here*/%>

                    

                        <% } %> 
                    </section>
                </section>
            </div>
        </div>
    </div>
</div>
<%- include('../../partials/footer.ejs') %>
<script src="/scripts/links.js"></script>
</body>
</html>